<h1><%=@task.title%></h1>
<div><p><%=@task.details %></p></div>
<div class="tasks">
  <input type="checkbox" <%='checked' if @task['completed'] %>><p><%= @task['completed'] ? "This task is completed" : "This task is not completed"%></p>
</div>

<%= link_to "Back to list", tasks_path %>
<%= link_to "Edit this task", edit_task_path(@task)  %>
