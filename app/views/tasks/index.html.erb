<div class="holder">
  <h1>My tasks</h1>

  <% @tasks.each do |task| %>
    <div class="tasks">
      <input type="checkbox" <%='checked' if task['completed'] %>> <p><%= link_to task.title, task_path(task) %> </p> <%= link_to "delete", task_path(task), method: :delete, data: { confirm: "Are you sure?" } %>
    </div>
  <% end %>

  <%= link_to "Add a new task", tasks_new_path %>
</div>
